var user = firebase.auth().currentUser

//actualizar
user.updateProfile({
    displayName: "Jane Q. User",
    photoURL: "https://example.com/jane-q-user/profile.jpg"
}).then(function(){
    //Update succesful
}).catch(function(error){
    //An error happened
})

//eliminar
user.delete().then(function(){
    //User deleted
}).catch(function(error){
    //An error happened
})